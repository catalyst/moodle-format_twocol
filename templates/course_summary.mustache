{{!
    @template format_twocol/course_sumamry

    This template renders the course sumamry section.

    Example context (json):
    {

    }
}}

<div class="twocol">
    <div class="row row-flex">
    <div class="twocol-notification">
       {{{nocompletioncriteria}}}
    </div>
    </div>
    <div class="row row-flex">
      <div class="col-md-6 col-sm-12">
        <div class="column">
         <div class="course-img" style='background-image: url("{{{courseimage}}}");'>
            <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
            {{> format_twocol/progress_bar }}
        </div>
        <div class="section">
	        <div class="right side">{{{rightcontent}}}</div>
	        <h2>{{summaryname}}</h2>
	        <div class="summary">
	            {{{summary}}}
	        </div>
        </div>
        <div class="sections">
            {{#sections}}
                <div class="topic-jump">
                    <a href="{{{url}}}" class="btn btn-primary btn-block topic-name">
                        <span class="topic-name-item">{{{name}}}</span>
                        {{#completion}}
                            {{#hastotal}}
                                <span class="topic-name-completion" title="{{complete}} of {{total}} activities completed">
                                    {{complete}} / {{total}}
                                </span>
                            {{/hastotal}}
                        {{/completion}}
                    </a>
                </div>
            {{/sections}}
        </div>

        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="column">
            {{#completioncounts}}
                <div class="completion-stats">
                    <div class="completion-stats-item">
                        <div class="completion-stats-number text-primary">{{complete}}</div>
                        <div class="completion-stats-title">
                            <a href="{{{completionurl}}}">{{#str}}userscomplete, format_twocol{{/str}}</a>
                        </div>
                    </div>
                    <div class="completion-stats-item">
                        <div class="completion-stats-number text-primary">{{inprogress}}</div>
                        <div class="completion-stats-title">
                            <a href="{{{completionurl}}}">{{#str}}usersinprogress, format_twocol{{/str}}</a>
                        </div>
                    </div>
                    <div class="completion-stats-item">
                        <div class="completion-stats-number text-primary">{{notstarted}}</div>
                        <div class="completion-stats-title">
                            <a href="{{{completionurl}}}">{{#str}}usersnotstarted, format_twocol{{/str}}</a>
                        </div>
                    </div>
                </div>
            {{/completioncounts}}

          <h3>{{detailsheading}}</h3>

          {{#sectionheading1}}
	          <h5>{{# pix }} i/{{{sectionicon1}}}, core {{/ pix }}{{sectionheading1}}</h5>
	          {{{sectiontext1}}}
          {{/sectionheading1}}

          {{#sectionheading2}}
              <h5>{{# pix }} i/{{{sectionicon2}}}, core {{/ pix }}{{sectionheading2}}</h5>
              {{{sectiontext2}}}
          {{/sectionheading2}}

          {{#sectionheading3}}
              <h5>{{# pix }} i/{{{sectionicon3}}}, core {{/ pix }}{{sectionheading3}}</h5>
              {{{sectiontext3}}}
          {{/sectionheading3}}

          {{#sectionheading4}}
              <h5>{{# pix }} i/{{{sectionicon4}}}, core {{/ pix }}{{sectionheading4}}</h5>
              {{{sectiontext4}}}
          {{/sectionheading4}}

          {{#sectionheading5}}
              <h5> {{# pix }} i/{{{sectionicon5}}}, core {{/ pix }}{{sectionheading5}}</h5>
              {{{sectiontext5}}}
          {{/sectionheading5}}

          <h3>{{resourcesheading}}</h3>
          <ul class="twocol">
           <li id="section-0" class="section main clearfix" role="region" aria-label="overview">
                <span class="hidden sectionname">overview</span>
                <div class = "content">
                    {{{ mods }}}
                    {{{ modcontrol }}}
                </div>
            </li>
          </ul>
        </div>
    </div>
    
  </div>
</div>
