{{!
    @template format_twocol/course_topic

    This template renders the course topics.

    Example context (json):
    {

    }
}}
<div class="twocol">
    {{{clipboard}}}
    <div class="single-section">
        <div class="section-navigation navigationtitle course-img course-img-{{{headerimageformat}}}" style='background-image: url("{{{courseimage}}}");'>
            <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
            {{> format_twocol/progress_bar }}
            <h6 class="section-navigation-back">
                <a href="{{{courseurl}}}" title="{{#str}}home_tip, format_twocol{{/str}}">
                    <i class="fa fa-home" aria-hidden="true"></i> {{#str}}home, format_twocol{{/str}}
                </a>
            </h6>
            <h2 class="{{sectionnameclasses}}">{{{sectionname}}}</h2>
        </div>
        <div class="section-navigation mdl-top">
            <span class="mdl-left">{{{navlinkprevious}}}</span>
            <span class="mdl-right">{{{navlinknext}}}</span>
        </div>
        <ul class="twocol">
	            {{{sectionheader}}}
	            {{{helpicon}}}
	            {{{sectioncmlist}}}
	            {{{sectioncmcontrol}}}
	            </div>
            </li>
        </ul>
        <div class="section-navigation mdl-bottom">
            <span class="mdl-left">{{{navlinkprevious}}}</span>
            <span class="mdl-right">{{{navlinknext}}}</span>
            <div class="mdl-align">{{{navselection}}}</div>
        </div>
    </div>
</div>
